<div class="container">
<%= breadcrumbs %>
<h1>ALL POSTS</h1>

<% breadcrumb :post_index %>

<table class="table row">
    <thead>
        <tr>
            <th>Article Title</th>
            <% if user_signed_in? %>
            <th scope="col-2">Edit</th>
            <th scope="col-2">Delete</th>
            <% end %>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <th><%= link_to post.post, "/post/show/#{post.id}", class: 'link-to-text-color-black table-post-title'  %></th>
            <% if user_signed_in? %>
            <td>
                <div class="btn btn-primary">
                <%= link_to("Edit","/post/edit/#{post.id}",class: "link-to-text-color-white") %>
                </div>
            </td>

            <td>
                <div class="btn btn-danger">
                <%= link_to("Delete","/post/delete/#{post.id}",{method: "post",class: "link-to-text-color-white"}) %>
                </div>
            </td>
            <% end %>
        </tr>
         <% end %>
    </tbody>
</table>
</div>
