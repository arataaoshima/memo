<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Categories</h1>

<table class="table table-dark row">
  <thead>
    <tr>
      <th scope="col-6">Title</th>
      <% if user_signed_in? %>
      <th scope="col-2">Edit</th>
      <th scope="col-2">Delete</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
      <% @categories.each do |category| %>
    <tr>
      <th><%= link_to category.title, "/categories/post/#{category.id}", class: 'link-to-text-color-black table-post-title'  %></th>
      <% if user_signed_in? %>
      <td><%= link_to 'Edit', edit_category_path(category) %></td>
      <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<% if user_signed_in? %>
<div class="btn btn-primary"><%= link_to 'New Category', new_category_path %></div>
<% end %>
</div>
